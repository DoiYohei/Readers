<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h2 class="text-center text-white">Add Book</h2>
        <%= form_for @topic do |f| %>
          <div class="topic-new-contents d-flex flex-row">
            <div class="form-group">
              <%= f.label :image, "画像", class: "text-white" %>
              <%= f.file_field :image %>
            </div>
            <div class="book-info">
              <div class="form-group">
                <%= f.label :book_tittle, "タイトル", class: "text-white" %>
                <%= f.text_field :book_tittle, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :author, "著者", class: "text-white" %>
                <%= f.text_field :author, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :hashname, "タグ", class: "text-white" %>
                <%= f.text_area :hashname, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :description, "要約・感想など",class: "text-white" %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <%= f.submit '投稿する', class: 'btn btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>