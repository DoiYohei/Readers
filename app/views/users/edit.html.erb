<div class="users-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4 users-edit-container">
        <h1 class="text-center text-black">登録情報の編集</h1>
        <%= form_for @user do |f| %>
          <div class="edit-form">
            <div class="form-group">
              <%= f.label :user_image, "プロフィール画像" %>
              <%= f.file_field :user_image %>
              <%= f.hidden_field :user_image_cache %>
            </div>
            <div class="form-group">
              <%= f.label :name, "名前", class: 'text-black' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: 'text-black' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, "パスワード", class: 'text-black' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード（確認用）", class: 'text-black' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
          <%= f.submit "変更する", class: 'btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>