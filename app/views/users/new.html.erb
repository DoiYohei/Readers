<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4 users-new-container">
        <h1 class="text-center text-black">Sign in</h1>
        <%= form_for @user do |f| %>
          <div class="entry-form">
            <div class="form-group">
              <%= f.label :user_image, "プロフィール画像" %>
              <%= f.file_field :user_image %>
              <%= f.hidden_field :user_image_cache %>
            </div>
            <div class="form-group">
              <%= f.label :user_image, "プロフィール画像" %>
              <%= f.file_field :user_image %>
            </div>
            <div class="form-group">
              <%= f.label :name, "名前", class: 'text-black' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス", class: 'text-black' %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password, "パスワード", class: 'text-black' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード（確認用）", class: 'text-black' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </div>
          <%= f.submit "登録", class: 'btn-block btn-black' %>
        <% end %>
        <%= link_to 'ログインはこちら', login_path, class: 'text-black' %>
      </div>
    </div>
  </div>
</div>