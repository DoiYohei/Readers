<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="offset-md-4 col-md-4 users-new-container">
        <h2 class="text-center text-white">Log in</h2>
        <%= form_for :session, url: login_path do |f| %>
          <div class="entry-form">
            <div class="form-group">
              <%= f.label :email, class: "text-white" %>
              <%= f.text_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "text-white" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          <%= f.submit "ログイン", class: "btn-block btn-white" %>
        <% end %>
        <%= link_to '登録はこちら', new_user_path, class: 'text-white' %>
      </div>
    </div>
  </div>
</div>